<UserControl x:Class="PointOfSale.RefactorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Border Name="containerMenuSelectionBorder" BorderBrush="Black" BorderThickness="1">
            <local:MenuSelectionScreen/>
        </Border>
        <Border BorderBrush="Black" Grid.Column="1" BorderThickness="1">
            <local:OrderComponent/>
        </Border>
    </Grid>
</UserControl>
